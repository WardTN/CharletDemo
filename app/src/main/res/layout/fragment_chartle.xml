<?xml version="1.0" encoding="utf-8"?>
<com.example.charletdemo.view.MyHorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/horizontalScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.charletdemo.view.ChartletView
            android:id="@+id/chartletView"
            android:layout_width="wrap_content"
            android:layout_height="200dp" />

        <com.example.charletdemo.view.NavigationLineView
            android:id="@+id/navigationLineView"
            android:layout_width="wrap_content"
            android:layout_height="70dp" />
    </LinearLayout>

</com.example.charletdemo.view.MyHorizontalScrollView>